<section class="container">
	<section class="col-lg-12">
		<%= form_for(resource, as: resource_name, :html => {:class => 'form-signin'}, url: session_path(resource_name)) do |f| %>		
		<section class="row">
			<section class="col-lg-12">
				<img src="/assets/user.png" alt="" class="center-block img-circle">
			</section>
			<section class="col-lg-12">
				<section class="form-group">
					<%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: "form-control" %>
				</section>
				<section class="form-group">
					<%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: "form-control" %></div>
				</section>
			</section>
			<section class="col-lg-6">
				<%= link_to "Esqueci a senha", new_password_path(resource_name) %>
			</section>
			<section class="col-lg-6">
				<%= f.submit "Login", :class => 'btn btn-primary btn-block pull-right' %>
			</section>
		</section>
		<% end %>
	</section>
</section>