<ol class="breadcrumb">
	<li><a href="#">Cadastros</a></li>
	<li class="active">Clientes</li>
</ol>

<div class="container-fluid">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th>Nome</th>
					<th>CNPJ</th>
					<th>Telefone</th>
					<th colspan="3">Ações</th>
				</tr>
			</thead>
			<tbody>
				<% @clients.each do |client| %>
				<tr>
					<td><%= client.name %></td>
					<td></td>
					<td></td>
					<td class="text-center"><%= link_to '', client, :class => "fa fa-info-circle" %></td>
					<td class="text-center"><%= link_to '', edit_client_path(client), :class => "fa fa-edit" %></td>
					<td class="text-center"><%= link_to '', client, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => "fa fa-eraser" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br />
	<%= link_to 'Novo', new_client_path, :class => "btn btn-default btn-primary" %>
</div>
