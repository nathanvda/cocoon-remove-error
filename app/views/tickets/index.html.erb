<ol class="breadcrumb">
	<li><a href="#">Cadastros</a></li>
	<li class="active">Chamados</li>
</ol>

<div class="container-fluid">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th>Nome</th>
					<th>CNPJ</th>
					<th>Telefone</th>
					<th colspan="3">Ações</th>
				</tr>
			</thead>
			<tbody>
				<% @tickets.each do |ticket| %>
				<tr>
					<td><%= ticket.name %></td>
					<td></td>
					<td></td>
					<td class="text-center"><%= link_to '', ticket, :class => "fa fa-info-circle" %></td>
					<td class="text-center"><%= link_to '', edit_ticket_path(ticket), :class => "fa fa-edit" %></td>
					<td class="text-center"><%= link_to '', ticket, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => "fa fa-eraser" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br />
	<%= link_to 'Novo', new_ticket_path, :class => "btn btn-default btn-primary" %>
</div>
