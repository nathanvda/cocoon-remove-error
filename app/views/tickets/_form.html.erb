<%= form_for @ticket, :class => "form-horizontal" do |f| %>
<% if @ticket.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
	<ul>
		<% @ticket.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="row">
	<div class="form-group col-lg-4">
		<%= f.label :customer, "Cliente" %>
		<%= f.text_field :customer, :class => "form-control", :id => "clients", :data => { :provide => "typeahed" }, :required => true %>
	</div>
	<div class="form-group col-lg-2">
		<%= f.label :priority, "Prioridade" %>
		<%= select_tag :priority, options_for_select((1..5).to_a.map { |val| [val,val] }), { :class => "form-control", :required => "true" } %>
	</div>
	<div class="form-group col-lg-2">
		<%= f.label :type, "Tipo" %>
		<%= select_tag :type, options_for_select([['Hardware', '1'],['Software', '2']]), { :class => "form-control", :required => "true" } %>
	</div>
	<div class="form-group col-lg-2">
		<%= f.label :customer, "Agendamento" %>
		<%= f.text_field :customer, :class => "form-control", :id => "schedule", :data => { :provide => "typeahed" }, :required => true %>
	</div>
	<div class="form-group col-lg-2">
		<%= f.label :customer, "Técnico" %>
		<%= f.text_field :customer, :class => "form-control", :id => "schedule", :data => { :provide => "typeahed" }, :required => true %>
	</div>
	<div class="form-group col-lg-12">
		<%= f.label :description, "Descrição" %>
		<%= f.text_area :description, :class => "form-control", :required => true %>
	</div>
	<div class="form-group col-lg-12">
		<%= f.label :obs, "Observação" %>
		<%= f.text_area :obs, :class => "form-control", :required => true %>
	</div>
</div>

<div class="row">
	<div class="form-group">
		<div class="col-lg-2 col-lg-offset-10">
			<%= link_to "Cancelar", tickets_path, :class => "btn btn-default btn-primary" %>
			<%= f.submit "Cadastrar", :class => "btn btn-default btn-primary" %>
		</div>
	</div>
	<br>
</div>

<% end %>