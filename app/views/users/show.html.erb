<ol class="breadcrumb">
	<li><a href="#">Cadastros</a></li>
	<li class="active">Usuários</li>
</ol>

<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Dados do Usuário</h3>
	</div>
	<div class="panel-body">
		<%= form_for @user, :class => "form-horizontal" do |f| %>
		<div class="row">
			<div class="col-lg-4">
				<%= f.label :name, "Nome" %>
				<%= f.text_field :name, :class => "form-control", autofocus: true, disabled: true %>
			</div>

			<div class="col-lg-3">
				<%= f.label :email, "E-mail" %>
				<%= f.email_field :email, :class => "form-control", disabled: true %>
			</div>

			<div class="col-lg-2">
				<%= f.label :phone, "Celular" %>
				<%= f.text_field :phone, :class => "form-control", disabled: true %>
			</div>

			<div class="col-lg-2">
				<%= f.label :phone, "Residencial" %>
				<%= f.text_field :phone, :class => "form-control", disabled: true %>
			</div>

		</div>
		<% end %>
	</div>
</div>
<%= link_to 'Editar', edit_user_path %>
<%= link_to 'Voltar', users_path %>